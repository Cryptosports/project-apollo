        "/api/v1/domains/{metaverseID}": {
            "get": {
                "tags": [ "domains" ],
                "consumes": [],
                "produces": [ "application/json", "text/json" ],
                "parameters": [
                    {
                        "name": "metaverseID",
                        "in": "path",
