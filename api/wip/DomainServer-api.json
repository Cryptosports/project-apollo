                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "allOf": [
                                "$ref": "#/definitions/SuccessError",
                                "properties": {
                                    "data": {
                                        "type": "object",
                                        "properties": {
                                            "domain": {
                                                "$ref": "#/definitions/Domain"
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            },
            "put": {
                "description": "Send heartbeat to Metaverse. Not included is PUT used for DomainMetadata (see 'domain-server/src/DomainMetadata.cpp')",
                "tags": [ "domains" ],
                "consumes": [ "application/json", "text/json" ],
                "produces": [ "application/json", "text/json" ],
                "parameters": [
                    {
                        "name": "metaverseID",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "heartbeat",
                        "in": "body",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "version": {
                                    "description": "BuildInfo::VERSION",
                                    "type": "string"
                                },
                                "protocol": {
                                    "description": "protocolVersionSignatureBase64()",
                                    "type": "string"
                                },
                                "network_address": {
                                    "type": "string"
                                },
                                "automatic_networking": {
                                    "type": "string"
                                },
                                "restricted": {
                                    "description": "domain is 'restricted' if anonymous connections are disallowed",
                                    "type": "boolean"
                                },
                                "api_key": {
                                    "description": "api token if temporary domain",
                                    "type": "string"
                                },
                                "heart_beat": {
                                    "description": "DomainMetadata::USERS",
                                    "type": "integer"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "allOf": [
                                "$ref": "#/definitions/SuccessError"
                            ]
                        }
                    }
                }
            }
        },
